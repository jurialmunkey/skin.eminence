    <include name="HubCategoriesNF">
        <control type="image">
            <width>widgethubrightw</width>
            <height>90</height>
            <texture colordiffuse="PosterBorder" border="5">common/border-inner.png</texture>
        </control>
        <control type="image">
            <width>90</width>
            <height>90</height>
            <texture>$INFO[ListItem.Icon]</texture>
            <aspectratio>scale</aspectratio>
            <visible>IsEmpty(ListItem.Property(Color))</visible>
        </control>
        <control type="image">
            <width>90</width>
            <height>90</height>
            <texture>$INFO[ListItem.Icon]</texture>
            <aspectratio>scale</aspectratio>
            <visible>!IsEmpty(ListItem.Property(Color))</visible>
            <colordiffuse>PanelFG-NF</colordiffuse>
        </control>
        <control type="label">
            <right>30</right>
            <posy>-16</posy>
            <left>100</left>
            <height>90</height>
            <align>right</align>
            <aligny>center</aligny>
            <textcolor>PanelFG-NF</textcolor>
            <label>$INFO[ListItem.Label]</label>
            <animation effect="slide" end="0,16" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
        </control>
        <control type="label">
            <right>30</right>
            <posy>48</posy>
            <left>100</left>
            <align>right</align>
            <aligny>center</aligny>
            <textcolor>PanelFG</textcolor>
            <font>Font-ListInfo</font>
            <label>$INFO[ListItem.Label2]</label>
        </control>
    </include>
    <include name="HubCategoriesLayout">
        <itemlayout width="widgethubrightw" height="100">
            <include>HubCategoriesNF</include>
        </itemlayout>
        <focusedlayout width="widgethubrightw" height="100">
            <control type="group">
                <visible>!Control.HasFocus(9500)</visible>
                <include>HubCategoriesNF</include>
            </control>
            <control type="group">
                <visible>Control.HasFocus(9500)</visible>
                <control type="image">
                    <width>widgethubrightw</width>
                    <height>90</height>
                    <texture colordiffuse="PosterHighlight">common/white.png</texture>
                </control>
                <control type="image">
                    <width>90</width>
                    <height>90</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <aspectratio>scale</aspectratio>
                    <visible>IsEmpty(ListItem.Property(Color))</visible>
                </control>
                <control type="image">
                    <width>90</width>
                    <height>90</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <aspectratio>scale</aspectratio>
                    <visible>!IsEmpty(ListItem.Property(Color))</visible>
                    <colordiffuse>Selected</colordiffuse>
                </control>
                <control type="label">
                    <right>30</right>
                    <posy>-16</posy>
                    <left>100</left>
                    <height>90</height>
                    <align>right</align>
                    <aligny>center</aligny>
                    <textcolor>Selected</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                    <animation effect="slide" end="0,16" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
                </control>
                <control type="label">
                    <right>30</right>
                    <posy>48</posy>
                    <left>100</left>
                    <align>right</align>
                    <aligny>center</aligny>
                    <textcolor>Selected</textcolor>
                    <font>Font-ListInfo</font>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </control>
        </focusedlayout>
        
    </include>
    <include name="HubMoveRight">
        <onright condition="SubString(Window(home).Property(librarynode),video)">ActivateWindow(Videos,$INFO[Window(home).Property(librarynode)],return)</onright>
        <onright condition="SubString(Window(home).Property(librarynode),musicdb)">ActivateWindow(Music,$INFO[Window(home).Property(librarynode)],return)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),tvchannels)">ActivateWindow(TVChannels,,return)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),tvguide)">ActivateWindow(TVGuide,,return)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),radiochannels)">ActivateWindow(RadioChannels,,return)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),tvrecordings)">ActivateWindow(TVRecordings,,return)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),tvsearch)">ActivateWindow(TVSearch,,return)</onright>
        <onright condition="stringcompare(Window(home).Property(librarynode),tvtimers)">ActivateWindow(TVTimers,,return)</onright>
    </include>
</includes>
