<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
    <constant name="lovefilmplot">448</constant>
    <constant name="lovefilmplotlist">478</constant>
    <include name="LovefilmContent">
        <control type="image">
            <width>lovefilmw</width>
            <height>bigposterh</height>
            <texture background="true">$VAR[FanartImage]</texture>
            <aspectratio aligny="center">scale</aspectratio>
            <visible>!Skin.HasSetting(lovefilm.info)</visible>
        </control>
        <control type="group">
            <visible>Skin.HasSetting(lovefilm.info)</visible>

            <control type="image">
                <right>0</right>
                <width>950</width>
                <height>bigposterh</height>
                <texture background="true">$VAR[FanartImage]</texture>
                <aspectratio aligny="center">scale</aspectratio>
            </control>
            <control type="group">
                <posx>64r</posx>
                <posy>10</posy>
                <include>WatchedImage</include>
            </control>
            <control type="group">
                <posx>globalpad</posx>
                <width>lovefilmplot</width>
                <posy>0</posy>
                <control type="label">
                    <width>lovefilmplot</width>
                    <height>44</height>
                    <aligny>top</aligny>
                    <label>$INFO[ListItem.Label]</label>
                    <font>Font-ListHeader</font>
                    <textcolor>Selected</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="label">
                    <posy>52</posy>
                    <width>lovefilmplot</width>
                    <height>50</height>
                    <aligny>top</aligny>
                    <label>$VAR[VARLabel3]</label>
                    <font>Font-ListInfo-Small</font>
                    <textcolor>Selected</textcolor>
                </control>
                <control type="label">
                    <right>0</right>
                    <posy>40r</posy>
                    <width>lovefilmplot</width>
                    <align>right</align>
                    <height>50</height>
                    <aligny>top</aligny>
                    <label>$INFO[ListItem.Label2]</label>
                    <font>Font-ListInfo-Small</font>
                    <textcolor>Selected</textcolor>
                </control>
                <control type="textbox">
                    <posy>102</posy>
                    <width>lovefilmplot</width>
                    <height>500</height>
                    <label>$INFO[ListItem.Plot]</label>
                    <font>Font-ListInfo</font>
                    <align>left</align>
                    <textcolor>Selected</textcolor>
                </control>
            </control>
        </control>
    </include>
    <include name="View_54_Lovefilm">
    
        <control type="group">
            <visible>Control.IsVisible(54)</visible>
            <include>Animation.ViewChange</include>
            <include>DefSideLabel</include>
            <control type="group">
                <posx>listx</posx>
                <posy>listy</posy>  
                <control type="image">
                    <width>globalw</width>
                    <height>globalh</height>
                    <texture colordiffuse="PosterBorder" border="5">common/border-inner.png</texture>
                </control>                    
                    
                <control type="wraplist" id="54">
                    <visible>!Container.Content(songs)</visible>
                    <visible>!Container.Content(albums)</visible>
                    <visible>!Window.IsVisible(MyVideoPlaylist.xml)</visible>
                    <preloaditems>2</preloaditems>
                    <posx>globalpad</posx>
                    <posy>globalpad</posy>
                    <width>lovefilmw</width>
                    <height>bigposterh</height>
                    <onleft>54</onleft>
                    <onright>54</onright>
                    <onup>9000</onup>
                    <include>DefOnBack</include>
                
                    <ondown>9000</ondown>
                    <pagecontrol>60</pagecontrol>
                    <viewtype label="31155">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <orientation>horizontal</orientation>
                    <itemlayout width="1394" height="bigposterh">
                        <include>LovefilmContent</include>
                    </itemlayout>
                    <focusedlayout width="lovefilmw" height="bigposterh">
                        <include>LovefilmContent</include>
                    </focusedlayout>

                </control>
                <control type="image">
                    <posx>globalpad</posx>
                    <posy>globalpad</posy>
                    <width>lovefilmw</width>
                    <height>bigposterh</height>
                    <texture border="2" colordiffuse="BorderColor">common/border.png</texture>
                    <visible>!Skin.HasSetting(lovefilm.info)</visible>
                </control>

                <control type="group">
                    <height>globalh</height>
                    <width>globalw</width>
                    <visible>!Skin.HasSetting(lovefilm.info)</visible>
                    <control type="image">
                        <posx>globalpad</posx>
                        <bottom>globalpad</bottom>
                        <width>lovefilmw</width>
                        <height>64</height>
                        <texture colordiffuse="PanelBG">common/white.png</texture>
                        <aspectratio>scale</aspectratio>
                        <animation effect="fade" end="66" condition="true">Conditional</animation>
                    </control>
                
            
                    <control type="label">
                        <posx>30</posx>
                        <bottom>globalpad</bottom>
                        <width>1400</width>
                        <height>64</height>
                        <align>left</align>
                        <aligny>center</aligny>
                        <textcolor>PanelFG</textcolor>
                        <label>$VAR[VARLabel]</label>
                    </control>
            
                    <control type="label">
                        <right>30</right>
                        <bottom>globalpad</bottom>
                        <width>1400</width>
                        <height>64</height>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>PanelFG</textcolor>
                        <font>Font-ListInfo</font>
                        <label>$INFO[ListItem.Label2]</label>
                        
                    </control>
                    <control type="group">
                        <posx>64r</posx>
                        <posy>10</posy>
                        <include>WatchedImage</include>
                    </control>
                </control>
                <control type="scrollbar" id="60">
                    <texturesliderbar colordiffuse="PosterHighlight">common/white.png</texturesliderbar>
                    <posy>708</posy>
                    <width>globalw</width>
                    <height>8</height>
                    <ondown>9000</ondown>
                    <onup>51</onup>
                    <orientation>horizontal</orientation>
                    
                    <animation effect="fade" start="100" end="0" condition="!IntegerGreaterThan(Container.NumPages,1) | !Control.HasFocus(54)">Conditional</animation>

                </control>
            </control>
        </control>

    </include>

</includes>
